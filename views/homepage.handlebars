<!-- Loop over each object in the projects array -->
<hr>
<div class='container-sm'>

  <div class="card-body d-flex flex-column align-items-center">
{{#each tweets as |tweet|}}
 <a href='/tweet/{{tweet.id}}'> <div class='container mb-4 blog'>
   
    <div class='card text-white py-3 text-center justify-content-center bg-dark' style='width: 40rem;'>
      
      
      <h5 class='blog-title'>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{{get_emoji}}}
        {{tweet.content}}

      </h5>
      <u><strong>posted by
        {{tweet.user.name}}
        on
        {{format_date tweet.date_created}} {{tweet.updatedAt}}</u></strong>
        <img src="images/{{user.avatar_file}}" width="144" height="144">
    </div>
    <div class='col-sm'>
      </div>
  </div></a>
{{/each}}
</div>
</div>
<hr>
